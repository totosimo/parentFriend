<div class= "container text-center mt-3">
     <h2>ParentFriends Nearby<h2>
</div>
<div class = "container">
  <div id="geocoder" class="geocoder"></div>
  <div class="map-centered">
    <div id="mapUsers"
      class="events-map-display"
      data-markers="<%= @markersUsers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

  <div class="users-scrollable">
    <% @users.each do |user| %>
      <%= link_to user_path(user), class: "card-event-link" do %>
        <div class="card-event">
          <div>
            <% if user.photo.attached? %>
              <%= cl_image_tag user.photo.key, class: "event-index-image card-user-img" %>
            <% else %>
               <%= image_tag "/assets/default_avatar.png", class: "event-index-image card-user-img" %>
            <% end %>
          </div>
          <div class="card-event-infos">
            <div class="card-event-h2-div">
              <h2 class="text-left"><%= user.first_name %> <%= user.last_name %></h2>
            </div>
            <div class="card-event-p-div">
              <p class="text-left"><%= user.bio %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
