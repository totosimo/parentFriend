<div class="container">
  <div class="chat-flexbox">
    <div>
      <h2><%= @name %></h2>
    </div>
    <div class="messages-scrollable" id="messages" data-chatroom-id="<%= @chatroom.id %>">
      <% @chatroom.messages.each do |message| %>
        <%= render "messages/message", message: message %>
      <% end %>
    </div>
    <div>
      <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
        <%= f.input :content, label: false, input_html: { autocomplete: 'off' }, placeholder: "Message #{@name}", class: "message-box" %>
        <%= f.submit "Send", class: "btn btn-prim-black" %>
      <% end %>
    </div>
  </div>
</div>
