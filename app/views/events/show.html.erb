<div class="container">
  <div class="headline-flexbox">
    <div><i class="fas fa-backward icon-big"></i></div>
    <div><h1><%= @event.name %></h1></div>
    <div>
    <i class="fas fa-edit icon-big"></i>
    <% if policy(@event).edit? %>
      <%= link_to '📝', edit_event_path(@event) %>
    <% end %>
    </div>
  </div>

  <div class="event-show-image">
    <% if @event.photo.attached? %>
      <%= cl_image_tag @event.photo.key, class: "event-show-image" %>
    <% else %>
       <%= image_tag "https://picsum.photos/800/900", class: "event-show-image" %>
    <% end %>
  </div>

  <div>
    <p><%= @event.description %></p>
  </div>
  <div>
    <h2>Dates:</h2>
    <p>Start: <%= @event.date_time_start %> </p>
    <p>End: <%= @event.date_time_end %> </p>
  </div>
  <div>
    <h2>Address:</h2>
    <p><%= @event.address %></p>
    <i class="fa fa-map-marked-alt icon-small"></i>
  </div>
</div>
