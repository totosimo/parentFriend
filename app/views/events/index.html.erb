<div class="container">
  <h1>My events</h1>
  <br>
  <br>
  <br>
  <h3>Placeholder for map</h3>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  <br>
  <br>
  <br>
  <% @events.each do |event| %>
  <ul>
    <li> <%= link_to event.name, event_path(event) %> | <%= event.date_time_start %> | <%= event.date_time_end %> </li>
  </ul>
  <% end %>
</div>
