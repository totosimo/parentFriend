<div class="headline-nav">
  <div class="left">
    <%= link_to :back, class: "icon-links" do %>
    <i class="fas fa-backward" aria-hidden="true"></i>
    <% end %>
  </div>

  <div>
    <% if current_user.id == event.user_id %>
    <%= link_to edit_event_path(event), class: "icon-links" do %>
    <i class="fas fa-edit mr-2" aria-hidden="true"></i>
      <% end %>
    <% end %>

    <% if current_user.id == event.user_id %>
      <%= link_to event_path(event), method: :delete, data: { confirm: "Are you sure?" }, class: "icon-links" do %>
      <i class="fas fa-trash" aria-hidden="true"></i>
      <% end %>
    <% end %>
  </div>
</div>
