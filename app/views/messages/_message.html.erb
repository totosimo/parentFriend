<div class="message-container <%= 'my-message' if current_user == message.user %>" id="message-<%= message.id %>" >
  <i class="author">
    <span><%= message.user.first_name %></span>
    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <p><%= message.content %></p>
</div>
